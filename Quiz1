
class BotState(object):
    name='State'
    List1=[]
    
    def Cambio(self,State):
        if State.name in self.List1:
            print("Actual",self,state.name)
            self.__class__=State
        else:
            print("Actual",self,state.name)
            
   def __str__(self):
        return self.name
        
class Apagado(BotState):
    name="Apagado"
    List1=['Encender']
    
class Encender(BotState):
    name="on"
    List1=['Apagado','Hablar','Dormir']
class Hablar(BotState):
    name='Hablar'
    List1=['Apagado','Dormir']
class Dormir(BotState):
    List1=['Encender','Apagado']

